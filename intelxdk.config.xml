<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:intelxdk="http://services.html5tools-software.intel.com/ns/intelxdk"
        id        = "<team_name>.<protject_name>"
        versioncode = "1"
        version   = "2.0.0">
    <name>P Audio Input</name>
    <content src="index.html"/>
    <description>
      A HTML5 Sample for using Phonegap audio.
    </description>
    <author href="http://software.intel.com/html5">
        Intel Corporation
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="android-minSdkVersion" value="8" />
    <preference name="android-maxSdkVersion" value="17" />
    <preference name="android-targetSdkVersion" value="17" />
    <preference name="android-permission" value="MOUNT_UNMOUNT_FILESYSTEMS" />
    <preference name="android-permission" value="MEDIA_CONTENT_CONTROL" />
        <preference name="android-signed" value="true" />
    <icon density="hdpi" platform="android" src="icon.png" />

    <intelxdk:plugin intelxdk:name="File" intelxdk:value="org.apache.cordova.file"/>
    <intelxdk:plugin intelxdk:name="Media" intelxdk:value="org.apache.cordova.media" />
</widget>